<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Resume</title>
  <script src="https://unpkg.com/feather-icons"></script>
  
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@200;300;400;500;600;700&display=swap");

* {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
:root {
  --primary-color: #1e90ff;
  --text-color: black;
}
html {
  font-size: 10px;
}
body {
  position: relative;
  font-family: Inter, sans-serif;
  padding: 0;
  margin: 0;
  color: black;
}

/* common styles */
img {
  width: 100%;
}
a {
  text-decoration: none;
  color: black;
}
.description {
  margin-top: 1rem;
  font-size: 1.5rem;
  font-weight: 500;
  color: var(--text-color);
  width: 400px;
}
.title {
  color: var(--primary-color);
  font-weight: 700;
  font-size: 2rem;
  text-transform: uppercase;
}
.item_preTitle {
  font-size: 1.5rem;
  color: var(--text-color);
  font-weight: 500;
}
.item_title {
  font-size: 1.6rem;
  color: black;
  font-weight: 500;
  margin: 0.8rem 0;
}
.item_subtitle {
  font-size: larger;
  color: var(--text-color);
  font-weight: 600;
}

/* layouts */
.container {
  position: absolute;
  position: relative;
  top: 0;
  left: 0;
  width: 100vw;
  height: 500x;
  margin: 0;
  display: grid;
  padding: 5rem;

  background: #f8f8ff;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
}

.profile {
  grid-column: 1 / -1;
  margin-bottom: 2rem;
}
.group-1,
.group-2 {
  display: flex;
  flex-direction: column;
  align-items: space-around;
  gap: 1rem;
}
.group-2{
  position: absolute;
  top: 250px;
  right: 30px;
}

.group-new{
  display: flex;
  flex-direction: column;
  align-items: space-around;
  gap: 1rem;
}

.group-3 {
  max-width: 700px;
  width: 100%;
  margin: 0 auto;
  grid-column: 1/-1;
  display: flex;
  flex-direction: row;
  gap: 5rem;
}
.group-3 > div {
  flex: 1;
}
@media only screen and (max-width: 768px) {
  .profile {
    margin-bottom: 0;
  }
  .group-3 {
    flex-direction: column;
  }
}

/* profile */
.profile_container {
  display: flex;
  gap: 2rem;
}
.profile_profileImg {
  max-width: 250px;
}
.profile_name_firstName {
  color: #00008b;
  font-weight: 200;
  font-size: clamp(2rem, 8vw, 4rem);
  text-transform: uppercase;
  display: block;
  margin-bottom: -0.8rem;
}
.profile_name_lastName {
  color: var(--primary-color);
  font-weight: 700;
  font-size: clamp(2.5rem, 15vw, 7rem);
  text-transform: uppercase;
  display: block;
}
.profile_title {
  font-size: 1.5rem;
  font-weight: 400;
  text-transform: uppercase;
}
.downloadBtn {
  display: block;
  text-decoration: underline;
  font-size: 1.6rem;
  margin-top: 1rem;
}
.downloadBtn:hover {
  color: var(--primary-color);
}
@media only screen and (max-width: 768px) {
  .profile_container {
    flex-direction: column;
  }
}

/* Expertise */
.skills_list {
  margin-top: 1rem;
  margin-left: 2rem;
  line-height: 2;
}

/* Ref  */
.ref_item {
  margin-top: 2rem;
}
.ref_name {
  font-size: 1.6rem;
  font-weight: 700;
}

/* eduction */
.edu_item {
  margin-top: 2rem;
}

/* certification */
.certification_item {
  margin-top: 2rem;
}
/* exp */
.exp_item {
  margin-top: 2rem;
}

/* awards */
.awards_item {
  margin-top: 2rem;
}
/* Interests */
.interest_items {
  margin-top: 2rem;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 2rem;
}
.interest_item {
  font-size: 1.5rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  color: var(--text-color);
}
.interest_item svg {
  width: 2rem;
}

/* socials */
.social_items {
  margin-top: 2rem;
}
.social_item {
  margin-top: 1.5rem;
  font-size: 1.5rem;
  display: flex;
  gap: 0.5rem;
  align-items: center;
  justify-content: flex-start;
  color: var(--text-color);
}
.social_item:hover {
  color: var(--primary-color);
}
.social_item svg {
  width: 2rem;
}

hr {
  grid-column: 1/-1;
  width: 80%;
  margin: 0 auto;
  margin-top: 5rem;
  margin-bottom: 1rem;
  border: none;
  border-top: 2px solid rgba(128, 128, 128, 0.229);
}
@media only screen and (max-width: 768px) {
  hr {
    margin: 0 auto;
  }
}

.exp {
  margin-top: 20px;
}

.image {
  border-radius: 50%;
}

  </style>
</head>

<body>
  <div class="container">
    <div class="profile">
      <div class="profile_container">
        <div class="profile_profileImg">
          <img src="data:image/png;base64,<%= profileImage %>" class="image">
        </div>
        <div>
          <h1 class="profile_name">
            <span class="profile_name_firstName"><%= personalinfo.fname %></span>
            <span class="profile_name_lastName"><%= personalinfo.lname %></span>
          </h1>
          <p class="description profile_description">
            <%= summary %>
          </p>
         
        </div>
      </div>
    </div>
    <div class="group-1">
      <div class="skills">
        <h3 class="title">Skills</h3>
        <ul class="skills_list description">
          <% skills.filter(skill => skill !== null).forEach((skill, index) =>
            { %>
            <li>
              <%=skill.skill%>
            </li>
            <% }) %>
         
        </ul>
      </div>

      <div class="edu">
        <h3 class="title">Education</h3>
          
        <% education.forEach((education, index) => { %>

        <div class="edu_item">
          <p class="item_preTitle"><%= education.startYear%> - <%= education.endYear %></p>
          <h4 class="item_title"><%= education.qualification %></h4>
          <p class="item_subtitle">
            <%= education.institute %>
          </p>
        </div>

        <% }) %>
        
      </div>
    </div>
       
    <div class="group-2">
      <div class="exp">
        <h3 class="title">Experience</h3>
        <% (experience || []).filter(experience => experience !==
          null).forEach((experience, index) => { %>
        <div class="exp_item">
          <p class="item_preTitle"><%=experience.company.startDate %> - <%= experience.company.endDate %></p>
          <h4 class="item_title"><%= experience.company.name %></h4>
          <p class="item_subtitle"><%= experience.company.title %></p>
          <p class=" description">
            <%= experience.company.role %>
          </p>
        </div>
        <% }) %>

    <div class="group-new">
      <div class="exp">
        <h3 class="title">Projects</h3>
        <% projects.filter((project) => project !== null).forEach((project,
          index) => { %>
        <div class="exp_item">
        
          <h4 class="item_title"><%= project.projectName %></h4>
          <p class=" description">
            <%= project.projectDescription %>
          </p>
        </div>
        <% }) %>
        
      </div>
      <div class="awards">
        <h3 class="title">Accomplishments</h3>
        <% accomplishments.filter(accomplishment => accomplishment !==
        null).forEach((accomplishment, index) => { %>
          <div class="awards_item">
        
            <li class=" description">
              <%= accomplishment.accomplishment %>
            </li>
          </div>
        <% }) %>
        
        
      </div>


      <div class="con">
        <h3 class="title">CONTACTS</h3>
        <div class="contact_info">
          <p class="description">
          <%= personalinfo.city %>, <%= personalinfo.country %> %>
          </p>
          <p class="description">
            +91<%= personalinfo.phone %>
          </p>
          <p class="description">
           <%= personalinfo.email %>
          </p>
        </div>
      </div>

      
      </div>
    </div>
    <hr>
    
  </div>
  <script>
    feather.replace()
  </script>
</body>

</html>