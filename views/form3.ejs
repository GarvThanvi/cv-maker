<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: "Arial", sans-serif;
        background-color: #3498db;
        color: black;
        font-size: larger;
      }

      .container {
        width: 80vw;

        margin: 50px auto;
        background-color: white;
        padding: 20px;
        box-sizing: border-box;
        border-radius: 8px;
        overflow-x: hidden;
      }

      h2 {
        color: #3498db;
      }

      label {
        display: block;
        margin-top: 10px;
      }

      input,
      textarea {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        margin-bottom: 15px;
        box-sizing: border-box;
        border: 1px solid #3498db;
        border-radius: 4px;
      }

      button {
        background-color: #3498db;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
    </style>
    <title>Resume Builder</title>
  </head>
  <body>
    <form action="/resume3" method="post" enctype="multipart/form-data">
      <div class="container">
        <h2>Resume Form</h2>

        <!-- Heading Section -->
        <label for="fname">First Name:</label>
        <input type="text" id="fname" name="fname" required />

        <label for="lname">Last Name:</label>
        <input type="text" id="lname" name="lname" required />

        <label for="city">City:</label>
        <input type="text" id="city" name="city" required />

        <label for="country">Country:</label>
        <input type="text" id="country" name="country" required />

        <label for="pincode">Pincode:</label>
        <input type="text" id="pincode" name="pincode" required />

        <label for="phone">Phone:</label>
        <input type="tel" id="phone" name="phone" required />

        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required />

        <h2>Upload Photo</h2>
        <label for="profileImage">Profile Image:</label>
        <input type="file" id="profileImage" name="profileImage" accept="image/*">
        <!-- Experience Section -->
        <h2>Experience</h2>

        <h4>Experience 1</h4>
        <label for="company">Company Name:</label>
        <input type="text" id="company" name="company1" required />

        <label for="title">Work Title:</label>
        <input type="text" id="title" name="title1" required />

        <label for="role">Details of the role:</label>
        <textarea id="role" name="role1" rows="4" required></textarea>

        <label for="startDate">Start Date:</label>
        <input type="date" id="startDate" name="startDate1" required />

        <label for="endDate">End Date:</label>
        <input type="date" id="endDate" name="endDate1" />

        <h4>Experience 2</h4>
        <label for="company">Company Name:</label>
        <input type="text" id="company" name="company2" />

        <label for="title">Work Title:</label>
        <input type="text" id="title" name="title2" />

        <label for="role">Details of the role:</label>
        <textarea id="role" name="role2" rows="4"></textarea>

        <label for="startDate">Start Date:</label>
        <input type="date" id="startDate" name="startDate2" />

        <label for="endDate">End Date:</label>
        <input type="date" id="endDate" name="endDate2" />

        <!-- Education Section -->
        <h2>Education</h2>

        <h4>School</h4>
        <label for="institute">Name of Institute:</label>
        <input type="text" id="institute" name="institute1" required />

        <label for="qualification">Qualification:</label>
        <input type="text" id="qualification" name="qualification1" required />

        <label for="startYear">Start Year:</label>
        <input type="date" id="startYear" name="startYear1" required />

        <label for="endYear">End Year:</label>
        <input type="date" id="endYear" name="endYear1" required />

        <label for="percentage">Percentage/CGPA:</label>
        <input type="text" id="percentage" name="percentage1" required />

        <h4>Junior College</h4>
        <label for="institute">Name of Institute:</label>
        <input type="text" id="institute" name="institute2" required />

        <label for="qualification">Qualification:</label>
        <input type="text" id="qualification" name="qualification2" required />

        <label for="startYear">Start Year:</label>
        <input type="date" id="startYear" name="startYear2" required />

        <label for="endYear">End Year:</label>
        <input type="date" id="endYear" name="endYear2" required />

        <label for="percentage">Percentage/CGPA:</label>
        <input type="text" id="percentage" name="percentage2" required />

        <h4>Under Graduate Course</h4>
        <label for="institute">Name of Institute:</label>
        <input type="text" id="institute" name="institute3" required />

        <label for="qualification">Qualification:</label>
        <input type="text" id="qualification" name="qualification3" required />

        <label for="startYear">Start Year:</label>
        <input type="date" id="startYear" name="startYear3" required />

        <label for="endYear">End Year:</label>
        <input type="date" id="endYear" name="endYear3" required />

        <label for="percentage">Percentage/CGPA:</label>
        <input type="text" id="percentage" name="percentage3" required />

        <!-- Skills Section -->
        <h2>Skills</h2>
        <label for="skill1">Skill 1 (Compulsory):</label>
        <input type="text" id="skill1" name="skill1" required />

        <label for="skill2">Skill 2:</label>
        <input type="text" id="skill2" name="skill2" />

        <label for="skill3">Skill 3:</label>
        <input type="text" id="skill3" name="skill3" />

        <label for="skill4">Skill 4:</label>
        <input type="text" id="skill4" name="skill4" />

        <label for="skill5">Skill 5:</label>
        <input type="text" id="skill5" name="skill5" />

        <!-- Summary Section -->
        <h2>Your Summary</h2>
        <label for="summary">Description:</label>
        <textarea id="summary" name="summary" rows="4" required></textarea>

        <!-- Projects Section -->
        <h2>Projects</h2>
        <label for="projectName">1 - Project Name:</label>
        <input type="text" id="projectName" name="projectName1" required />

        <label for="projectDescription">1 - Project Description:</label>
        <textarea
          id="projectDescription"
          name="projectDescription1"
          rows="4"
          required
        ></textarea>

        <label for="projectName">2 - Project Name:</label>
        <input type="text" id="projectName" name="projectName2" />

        <label for="projectDescription">2 - Project Description:</label>
        <textarea
          id="projectDescription"
          name="projectDescription2"
          rows="4"
        ></textarea>

        <label for="projectName">3 - Project Name:</label>
        <input type="text" id="projectName" name="projectName3" />

        <label for="projectDescription">3 - Project Description:</label>
        <textarea
          id="projectDescription"
          name="projectDescription3"
          rows="4"
        ></textarea>

        <!-- Accomplishments Section -->
        <h2>Accomplishments</h2>
        <label for="accomplishment1">Accomplishment 1 (Compulsory):</label>
        <input
          type="text"
          id="accomplishment1"
          name="accomplishment1"
          required
        />

        <label for="accomplishment2">Accomplishment 2:</label>
        <input type="text" id="accomplishment2" name="accomplishment2"/>

        <label for="accomplishment3">Accomplishment 3:</label>
        <input type="text" id="accomplishment3" name="accomplishment3" />

        <label for="accomplishment4">Accomplishment 4:</label>
        <input type="text" id="accomplishment4" name="accomplishment4" />

        <label for="accomplishment5">Accomplishment 5:</label>
        <input type="text" id="accomplishment5" name="accomplishment5" />

        <!-- Submit Button -->
        <button type="submit">Generate Resume</button>
      </div>
    </form>
  </body>
</html>
